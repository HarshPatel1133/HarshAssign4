    <style name="nameTextStyle">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
    </style>
    <style name="webSrvTextStyle">
        <item name="android:textColor">@color/dark_purple</item>
